<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp">

        <com.alorma.timeline.RoundTimelineView
            android:id="@+id/timeline"
            android:layout_width="?android:listPreferredItemHeight"
            android:layout_height="?android:listPreferredItemHeight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            app:timeline_indicatorSize="7dp"
            app:timeline_internalPadding="40dp"
            app:timeline_lineStyle="dashed"
            app:timeline_lineWidth="2dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvtimeline"
            android:elevation="10dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/timeline"
            android:layout_alignParentEnd="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/group_photo2"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                 />

            <TextView
                android:id="@+id/group_name2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/group_photo2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/group_info2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/group_name2" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>